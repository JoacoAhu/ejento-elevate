{
  "name": "ejento-elevate",
  "version": "1.0.0",
  "description": "Technician review and reward system for home services industry",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "echo 'Server build complete'",
    "build:production": "npm run build && docker build -t ejento-elevate .",
    "build:staging": "npm run build && docker build -t ejento-elevate:staging .",
    "start": "node server/index.js",
    "start:production": "NODE_ENV=production node server/index.js",
    "start:staging": "NODE_ENV=staging node server/index.js",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "jest server/",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "eslint server/",
    "lint:fix": "npm run lint:client -- --fix && npm run lint:server -- --fix",
    "docker:build": "docker build -t ejento-elevate .",
    "docker:run": "docker run -p 3000:3000 -p 8000:8000 ejento-elevate",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "db:migrate": "cd server && npx sequelize-cli db:migrate",
    "db:seed": "cd server && npx sequelize-cli db:seed:all",
    "db:reset": "cd server && npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "reviews:pull": "node server/scripts/pullReviews.js",
    "reviews:schedule": "node server/scripts/scheduleReviewPull.js",
    "reviews:respond": "node server/scripts/autoRespond.js",
    "personas:sync": "node server/scripts/syncPersonas.js",
    "rewards:process": "node server/scripts/processRewards.js",
    "cron:daily": "npm run reviews:pull && npm run reviews:respond && npm run rewards:process",
    "setup": "npm install && cd client && npm install && cd .. && npm run db:migrate && npm run db:seed",
    "clean": "rm -rf node_modules client/node_modules client/dist server/dist"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.104.0",
    "rate-limiter-flexible": "^4.0.1",
    "sequelize": "^6.37.7",
    "twilio": "^4.19.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Ejento Team",
  "license": "MIT"
}
